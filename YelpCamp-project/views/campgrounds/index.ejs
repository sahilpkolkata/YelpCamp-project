<% include ../partials/header %>

  <header class="jumbotron">
    <div class="container">
      <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> <strong>Welcome to YelpCamp!</strong></h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flexwrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
      <div id="campground" class="col-sm-3">
        <div class="img-thumbnail">
          <img src="<%= campground.image %>" style="height:100%; width:100%;">
          <div class="caption text-responsive">
            <h4 class= "campname"><strong><%=campground.name%></strong></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= campground._id %>" class= "btn btn-primary">More Info</a>
          </p>
        </div>

      </div>
    <% }) %>
  </div>
</div>

<%include ../partials/footer %>
