    <div style="margin: 0 auto ;">
      <form   action="/campgrounds/<%= campground._id%>/comments" method="post">
        <div class="form-group">
          <input class ="form-control" style="width:350px;" type="text" name="comment[text]" placeholder="text">
        </div>
        <!-- <div class="form-group">
          <input style="width:350px;" type="text" name="comment[author]" placeholder ="author">
        </div> -->
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

